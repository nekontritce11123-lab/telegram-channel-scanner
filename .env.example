# Telegram API credentials (required)
API_ID=your_api_id
API_HASH=your_api_hash
PHONE=+79001234567

# =============================================================================
# LLM Backend Configuration (v88.0)
# =============================================================================

# Backend selection: OpenRouter (default) or Ollama (local)
# Set to "true" to use local Ollama instead of OpenRouter
USE_OLLAMA=false

# OpenRouter API (Gemini 2.0 Flash + Qwen 2.5-VL fallback)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Optional: Override default models
# OPENROUTER_PRIMARY_MODEL=google/gemini-2.0-flash-001
# OPENROUTER_FALLBACK_MODEL=qwen/qwen2.5-vl-72b-instruct
# OPENROUTER_TIMEOUT=120

# Fallback settings
# LLM_FALLBACK_ENABLED=true
# LLM_FALLBACK_THRESHOLD=3

# =============================================================================
# Ollama Configuration (local fallback)
# =============================================================================

# OLLAMA_URL=http://localhost:11434/api/chat
# OLLAMA_MODEL=qwen3:8b
# OLLAMA_TIMEOUT=180

# =============================================================================
# Optional Configuration
# =============================================================================

# GROQ_API_KEY=your_groq_key  # Deprecated, use OpenRouter instead
# DEBUG_CLASSIFIER=false
